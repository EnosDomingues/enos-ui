{
  "name": "@enos-ui/react",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "tsup src/index.tsx --format esm,cjs --dts --watch",
    "lint": "eslint src/**/*.ts* --fix"
  },
  "keywords": [
    "react",
    "ui-components",
    "design-system",
    "frontend",
    "react-components"
