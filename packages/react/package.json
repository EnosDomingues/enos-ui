  "devDependencies": {
    "@enos-ui/eslint-config": "*",
    "@enos-ui/tokens": "*",
    "@enos-ui/ts-config": "*",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "react": "^18.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@stitches/react": "^1.2.8",
    "phosphor-react": "^1.4.1"
  }
}
